<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <p id="notice" style="color:orange;"><%= notice %></p>
      <div class="col-lg-12">
        <h2 class="page-header" style="margin: 10px 0 15px !important;">Listing Affiliates</h2>
      </div>
      <div>
        <%= form_with(url: admin_affiliates_path, method: :get) do |f| %>
          <div class="form-group">
            <%= f.text_field :q, placeholder: "Search by Paytm Number or Upi Id or Click Id", class: "form-control" %>
          </div>
        <% end %>
      </div>
      <% if @affiliates.present? %>
        <table class="table table-responsive table-bordered">
          <thead>
            <tr>
              <th>ID</th>
              <th>Paytm Number</th>
              <th>UPI ID</th>
              <th>Campaign Name</th>
              <th>Refer Code</th>
              <th>Click Id</th>
              <th>Referrers Count</th>
              <th>Created At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @affiliates.each do |affiliate| %>
              <tr>
                <td><%= affiliate.id %></td>
                <td><%= affiliate.paytm_number %></td>
                <td><%= affiliate.upi_id %></td>
                <td><%= affiliate.campaign_name %></td>
                <td><%= affiliate.refer_code %></td>
                <td><%= affiliate.click_id %></td>
                <td><%= affiliate.referrers_count %></td>
                <td><%= affiliate.created_at.strftime("%d/%m/%y %I:%M:%p") %></td>
                <td>
                  <%= link_to 'Show', admin_affiliate_path(affiliate), class: 'btn btn-primary btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="pagination">
          <%= will_paginate @affiliates %>
        </div>
      <% else %>
        <h1 class="text-center">No Affiliates Found</h1>
      <% end %>
    </div>
  </div>
</div>
