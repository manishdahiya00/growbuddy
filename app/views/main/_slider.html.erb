<div class="relative w-full h-48 lg:h-96 rounded-lg shadow-lg overflow-hidden" id="carousel">
  <% @app_banners.each_with_index do |app_banner, index| %>
    <div class="absolute w-full h-full carousel-slide" style="transform: translateX(<%= index * 100 %>%)">
      <%= link_to app_banner.action_url, target: "_blank" do %>
        <img src="<%= app_banner.image_url %>" alt="Image <%= index + 1 %>" class="w-full h-full object-cover">
      <% end %>
    </div>
  <% end %>
  <button id="prev"
        class="carousel-button prev absolute top-1/2 left-2 transform -translate-y-1/2 bg-white bg-opacity-50 hover:bg-opacity-75 rounded-full p-1">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
    </svg>
  </button>
  <button id="next"
        class="carousel-button next absolute top-1/2 right-2 transform -translate-y-1/2 bg-white bg-opacity-50 hover:bg-opacity-75 rounded-full p-1">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
  </button>
  <div class="absolute bottom-4 left-0 right-0 flex justify-center space-x-2">
    <% @app_banners.each_with_index do |app_banner, index| %>
      <button class="indicator w-3 h-3 rounded-full bg-white transition-opacity duration-200 <%= index == 0 ? "opacity-100" : "opacity-50 hover:opacity-100" %>" data-slide="<%= index %>"></button>
    <% end %>
  </div>
</div>
