    <%= render partial: "shared/navbar" %>
<div class="container mx-auto p-4">
  <div class="mb-8">
    <%= render partial: "slider" %>
  </div>
  <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 lg:grid-cols-8 xl:grid-cols-10 gap-3 sm:gap-4 md:gap-5">
    <% @app_offers.each do |app_offer| %>
      <%= link_to app_offer_path(app_offer.identifier) do %>
        <div
          class="bg-white rounded-lg shadow-xs overflow-hidden transition-transform duration-300 hover:shadow-md hover:-translate-y-1 h-full p-2">
          <div class="relative pb-[100%]">
            <%= image_tag app_offer.image_url , alt: "FUNSTAR Offer" ,
              class: "absolute inset-0 w-full h-full object-contain" %>
          </div>
          <div class="p-2">
            <h3 class="text-xs sm:text-sm font-semibold text-gray-800 truncate">
              <%= app_offer.offer_name %>
            </h3>
            <p class="text-xs text-gray-600">Amount: <span class="font-medium text-green-600">
                <%= app_offer.offer_amount %>
              </span></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
